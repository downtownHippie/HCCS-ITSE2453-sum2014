<Window x:Class="FlagQuiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="310">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <GroupBox Height="74" Width="101" Header="Flag" Margin="5" Grid.Column="0" BorderThickness="1" VerticalAlignment="Center">
            <Image Name="imgFlag" Height="54" Width="81" Margin="5"></Image>
        </GroupBox>
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1" VerticalAlignment="Center">
            <Label Margin="1">Select Country:</Label>
            <ComboBox Name="cbCountry" AllowDrop="True" Margin="3"></ComboBox>
            <TextBox  Name="tbSomeWords" Margin="3" IsEnabled="False">some words</TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="2" VerticalAlignment="Center">
            <Button Name="btnSubmit" Margin="3">Submit</Button>
            <Button x:Name="btnNextFlag" Margin="3" IsEnabled="False" Content=" Next Flag "/>
            <TextBox Name="tbScore" Margin="3" IsEnabled="False">score</TextBox>
        </StackPanel>
    </Grid>

</Window>
